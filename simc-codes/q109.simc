// Print squares of natural numbers and their sum till n terms

MAIN
    var n = input("Enter number of terms : ", "i")
    var sum=0
    var ctr=1
    var x=0

    while(n>=ctr)
    {
        x = ctr*ctr
        sum = sum + x
        print (x)
        print (" ")
        ctr = ctr + 1 
    }
    print("The sum is : {sum}")

END_MAIN
